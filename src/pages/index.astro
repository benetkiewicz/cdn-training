---
import Layout from "../layouts/Layout.astro";
import logo from "../../public/frontend-logo-smallest.webp";
---

<style>
    .hero {
        background-color: var(--secondary);
        padding: 4rem 0;
        text-align: center;
    }

    .hero h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--text);
    }

    .hero p {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
        color: var(--text-light);
    }

    .course-overview {
        background-color: white;
        padding: 4rem 0;
    }

    .course-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .course-feature {
        padding: 1.5rem;
        background: var(--secondary);
        border-radius: 8px;
        text-align: center;
    }

    .course-feature h3 {
        color: var(--primary);
        margin-bottom: 1rem;
    }

    .author-section {
        background-color: var(--secondary);
        padding: 4rem 0;
    }

    .author-container {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 3rem;
        align-items: center;
    }

    .author-image {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background-color: var(--primary);
        margin: 0 auto;
    }

    .author-content h2 {
        color: var(--text);
        margin-bottom: 1rem;
    }

    .author-credentials {
        display: flex;
        gap: 2rem;
        margin-top: 1.5rem;
    }

    .credential {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-light);
    }

    @media (max-width: 768px) {
        .author-container {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .author-credentials {
            justify-content: center;
            flex-wrap: wrap;
        }
    }
</style>
<Layout>
    <div class="hero">
        <div class="container">
            <h1>Master Content Delivery Networks</h1>
            <p>
                Learn how to optimize your website's performance using Fastly CDNs through practical, hands-on lessons
            </p>
            <br />
            <a href="lessons" class="button">Start Learning</a>
        </div>
    </div>

    <section class="course-overview">
        <div class="container">
            <h2>What You'll Learn</h2>
            <p>
                A comprehensive journey into the world of Content Delivery Networks, from fundamentals to advanced
                implementation.
            </p>

            <div class="course-grid">
                <div class="course-feature">
                    <h3>Practical Approach</h3>
                    <p>Real-world examples and hands-on exercises to reinforce your learning</p>
                </div>
                <div class="course-feature">
                    <h3>Industry Best Practices</h3>
                    <p>Learn current CDN implementation strategies used by top companies</p>
                </div>
                <div class="course-feature">
                    <h3>Performance Optimization</h3>
                    <p>Master techniques to significantly improve your website's global performance</p>
                </div>
                <div class="course-feature">
                    <h3>Interactive Learning</h3>
                    <p>Engage with practical exercises and real-time demonstrations</p>
                </div>
            </div>
        </div>
    </section>

    <section class="author-section">
        <div class="container">
            <div class="author-container">
                <div class="author-image">
                    <img src={logo.src} alt="Course Author" style="border-radius: 50%;width: 200px;" />
                </div>
                <div class="author-content">
                    <h2>Meet Your Instructor</h2>
                    <p>
                        Piotr Benetkiewicz is a Senior Software Engineer with over 15 years of experience in web
                        application development and content delivery networks. He has helped numerous Fortune 500
                        companies implement and optimize their CDN strategies.
                    </p>

                    <div class="author-credentials">
                        <div class="credential">
                            <span>15+ Years Experience</span>
                        </div>
                        <div class="credential">
                            <span>100+ Students Taught</span>
                        </div>
                        <div class="credential">
                            <span>Technical Author</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
