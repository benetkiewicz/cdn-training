---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <style is:global slot="head">
        .image-wrapper {
            background: #171717;
            border-radius: 8px;
            display: flex;
            justify-content: center;
            margin-top: 1rem;
            margin-bottom: 1rem;
            overflow-x: hidden;
            max-width: 100%;
        }
        .lesson-content {
            max-width: var(--max-width);
            margin: 0 auto;
            background: #fff;
            padding: 1rem;
            border-radius: 8px;
            box-shadow: 0 2px 4px #0000001a;
            border: 1px solid var(--secondary);
            width: 100%;
            overflow-wrap: break-word;
            word-wrap: break-word;
            overflow-x: hidden;
        }
        .lesson-content p,
        .lesson-content h2 {
            margin-top: 1rem;
        }
        .lesson-content ul {
            padding-left: 1.5rem;
            margin: 0.75rem 0;
        }
        .lesson-content li {
            margin-bottom: 0.5rem;
            line-height: 1.5;
            position: relative;
        }
        .lesson-content li p {
            margin: 0;
            display: inline;
        }
        .lesson-nav {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
            padding-top: 1rem;
            border-top: 1px solid var(--secondary);
        }

        pre,
        code {
            max-width: 100%;
            white-space: pre-wrap;
            word-wrap: break-word;
            overflow-x: auto;
            padding: 0.5rem;
        }
        
        blockquote {
            margin: 1.5rem 0;
            padding: 1rem 1.5rem;
            background-color: #f8f9fa;
            border-left: 4px solid var(--secondary);
            border-radius: 0 8px 8px 0;
            font-style: italic;
            color: #555;
        }
        
        blockquote p {
            margin: 0.5rem 0;
        }
        
        blockquote cite {
            display: block;
            font-size: 0.9em;
            margin-top: 0.75rem;
            font-style: normal;
            opacity: 0.8;
        }
    </style>
    <div class="container">
        <div class="lesson-content">
            <slot />
            <div class="lesson-nav">
                <a href="#" class="button">Previous</a>
                <a href="#" class="button">Next</a>
            </div>
        </div>
    </div>
</Layout>
